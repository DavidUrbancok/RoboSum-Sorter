<Window x:Class="RoboSum_Sorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoboSum_Sorter"
        mc:Ignorable="d"
        Title="RoboSum Sorter" Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="Image"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Save"/>
                    <Separator/>
                    <MenuItem Header="_Close" x:Name="Close" Click="Close_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>

        <StackPanel Grid.Row="0">
            <Image Width="550" Source="..\Images\RoboSum.png" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Button Background="Green" x:Name="Load" Width="100" Height="30" Foreground="White" FontWeight="Bold" Click="Load_Click">Load CSV</Button>
        </StackPanel>

    </Grid>
</Window>
